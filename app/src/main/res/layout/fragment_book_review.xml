<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/book_review_image_card"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/bookshelf_image_height"
            android:layout_marginStart="@dimen/space_wide"
            android:layout_marginTop="@dimen/space_wide"
            app:cardElevation="@dimen/bookshelf_image_elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/book_review_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"
                android:src="@drawable/sample" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/book_review_title"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_wide"
            android:layout_marginTop="@dimen/space_wide"
            android:layout_marginEnd="@dimen/space_wide"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="スプートニクの恋人スプートニクの恋人スプートニクの恋人スプートニクの恋人"
            android:textSize="@dimen/text_size_book_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_review_image_card"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_review_author"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_wide"
            android:layout_marginTop="@dimen/space_default"
            android:layout_marginEnd="@dimen/space_wide"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="村上春樹"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_review_image_card"
            app:layout_constraintTop_toBottomOf="@+id/book_review_title" />

        <RatingBar
            android:id="@+id/book_review_rating_bar"
            style="?android:ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_wide"
            android:layout_marginTop="@dimen/space_wide"
            app:layout_constraintStart_toEndOf="@+id/book_review_image_card"
            app:layout_constraintTop_toBottomOf="@+id/book_review_author" />

        <TextView
            android:id="@+id/book_review_memo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_wide"
            android:layout_marginTop="@dimen/space_wide"
            android:text="メモ"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_review_image_card" />

        <Button
            android:id="@+id/book_review_save_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/match_constraint"
            android:layout_margin="@dimen/space_wide"
            android:background="@drawable/button_style_primary_color"
            android:clickable="true"
            android:includeFontPadding="false"
            android:text="保存"
            android:textColor="@color/white"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/book_review_editor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_review_image_card" />

        <EditText
            android:id="@+id/book_review_editor"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:layout_margin="@dimen/space_wide"
            android:autofillHints="マークダウン形式でメモが入力できます。"
            android:background="@drawable/book_review_editor_bg"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="@dimen/space_wide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_review_memo_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
